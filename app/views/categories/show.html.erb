<div class="col-lg-8 mx-auto">
  <h2 class="display-4 text-info text-center">Category: <%= @category.name %></h2>
  <% if logged_in? && current_user.admin? %>
    <div class="row">
      <div class="col-lg-12">
        <div class="my-2 text-center">
          <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-warning" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flickr_pagination text-center mt-4">
    <%= will_paginate @articles, :container => false %>
  </div>

  <%= render 'shared/articles', articles: @articles %>

  <div class="flickr_pagination text-center mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>
