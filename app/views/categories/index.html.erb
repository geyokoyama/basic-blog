<div class="col-lg-8 mx-auto">
  <h2 class="display-4 text-info text-center">Categories</h2>

  <div class="flickr_pagination text-center mt-4">
    <%= will_paginate @categories, :container => false %>
  </div>

  <% @categories.each do |category| %>
    <div class="row">
      <div class="col-lg-12">
        <div class="card my-4">
          <div class="card-body">
            <h3 class="card-title"><%= link_to category.name, category, class: "text-decoration-none text-info hover-underline" %></h5>
          </div>
          <div class="card-footer text-muted d-flex">
            <p class="m-0">
              <small>
                <span>posted:&nbsp;<%= category.created_at.strftime("%Y-%m-%d") %></span>&nbsp;&bull;&nbsp;<span>updated:&nbsp;<%= category.updated_at.strftime("%Y-%m-%d") %></span>
              </small>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flickr_pagination text-center mb-4">
    <%= will_paginate @categories, :container => false %>
  </div>
</div>

