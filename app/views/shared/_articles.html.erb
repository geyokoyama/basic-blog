<% articles.each do |article| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="card my-4">
        <div class="card-body">
          <h3 class="card-title"><%= link_to article.title, article, class: "text-decoration-none text-info hover-underline" %></h5>
          <div class="card-subtitle mb-2">
            <% if article.categories.any? %>
              <div class="my-1">
                <%= render article.categories %>
              </div>
            <% end %>
          </div>
          <p class="card-subtitle mb-2 text-muted">By&nbsp;<%= link_to article.user.username, article.user, class: "text-decoration-none text-muted hover-underline" %></p>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
          <%= link_to 'View', article, class: "btn btn-outline-info" %></td>

          <% if logged_in? && (article.user == current_user || current_user.admin?) %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-warning" %></td>
            <%= link_to 'Delete', article, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </div>
        <div class="card-footer text-muted d-flex">
          <p class="m-0">
            <small>
              <span>posted:&nbsp;<%= article.created_at.strftime("%Y-%m-%d") %></span>&nbsp;&bull;&nbsp;<span>updated:&nbsp;<%= article.updated_at.strftime("%Y-%m-%d") %></span>
            </small>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
