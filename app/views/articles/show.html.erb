<div class="col-lg-8 mx-auto">
  <h2 class="display-4 text-info"><%= @article.title %></h2>

  <div class="row">
    <div class="col-lg-8">
      <div class="my-4">
        <p class="text-muted m-0"><span>posted:&nbsp;<%= @article.created_at.strftime("%Y-%m-%d") %></span>&nbsp;&bull;&nbsp;<span>updated:&nbsp;<%= @article.updated_at.strftime("%Y-%m-%d") %></span></p>
        <p class="text-muted my-4">
          <%= link_to gravatar_for(@article.user, @article.user), @article.user %>
          By&nbsp;<%= link_to @article.user.username, @article.user, class: "text-muted text-decoration-none hover-underline" %>
        </p>

      </div>

      <div class="my-4">
        <%= simple_format(@article.description) %>
      </div>

      <%= link_to 'Go to Articles', articles_path, class: 'btn btn-outline-info' %>
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-warning" %></td>
      <%= link_to 'Delete', @article, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %></td>
    </div>
  </div>
</div>
